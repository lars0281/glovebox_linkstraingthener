{
	"manifest_version": 2,
	"name": "Glovebox Linklooker",
	"description": "clarify obfuscated URL. Remove unnessesary redirects.",
	"homepage_url": "https://github.com/lars0281/glovebox_linkstraingthener",
	"version": "0.8",
	"icons": {
		"48": "icons/Untitled-48.png",
		"96": "icons/image-B.svg"
	},
	
	"applications": {
    "gecko": {
      "strict_min_version": "54.0a1"
    }
  },
	"browser_specific_settings": {
		"gecko": {
			"id": "linklooker@glovebox.com",
			"strict_min_version": "42.0"
		}
	},

	"background": {
		"scripts": [
			"background.js"
		]
	},
	"browser_action": {
		"default_icon": "icons/Untitled-48.png",
		"theme_icons": [
			{
				"light": "icons/Untitled-48.png",
				"dark": "icons/beasts-32.png",
				"size": 32
			}
		],
		"default_title": "Glovebox linklooker"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["./background.js" ]
		}
	],
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"activeTab",
		"tabs",
		"contextMenus",
		"menus",
		"menus.overrideContext",
		"notifications",
		"clipboardWrite",
		"storage",
		"unlimitedStorage",
		"<all_urls>"
	],
	"web_accessible_resources": [
		"beasts/*.jpg", "*"
	]
}